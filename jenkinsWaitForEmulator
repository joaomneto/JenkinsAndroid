if [ $# -eq 0 ]; then
    echo "Usage: jenkinsWaitForEmulator <timeout in secs>"
    exit 1
fi
SECONDS=0
while [ "$SECONDS" -le "$1" ]; do
    echo "Waiting for Emulator to start. Time ellapsed $SECONDS secs...";
    bootStatus=`/Library/Android/sdk/platform-tools/adb shell getprop sys.boot_completed`
    if [ "$bootStatus" == "1" ]; then echo "Emulator has finished booting"; exit 0; fi
    sleep 1;
done
echo "Timed out waiting for emulator!";
exit -1;